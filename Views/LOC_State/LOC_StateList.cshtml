@{
    ViewData["Title"] = "State List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable
<div class="col-md-12">
    <div class="row">
        <div class="col-md-10">
            <h4>State List</h4>
        </div>
        <div class="col-md-2">
            <a asp-controller="LOC_State" asp-action="Add" class="btn btn-success">Add State</a>
        </div>
    </div>
</div>
<hr />
<div class="portlet-body">
    <div class="pull-right">
        <div id="sample_1_filter" class="dataTables_filter">
            <label>Search<input type="search" class="form-control input-sm input-small input-inline" placeholder="" id="sample_1" /></label>
        </div>
    </div>

    <table class="table table-responsive table-sm table-striped table-bordered table-hover" id="sample_1">
    <thead>
        <tr>
            <th>CountryName</th>
            <th>CountryCode</th>
            <th>StateName</th>
            <th>StateCode</th>
            <th>CreationDate</th>
            <th>ModificationDate</th>
            <th>Action</th>
        </tr>
    </thead>
        <tbody id="sample_2">
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["CountryName"]</td>
                <td>@dr["CountryCode"]</td>
                <td>@dr["StateName"]</td>
                <td>@dr["StateCode"]</td>
                <td>@Convert.ToDateTime(dr["CreationDate"]).ToString("dd-MM-yyyy")</td>
                <td>@Convert.ToDateTime(dr["ModificationDate"]).ToString("dd-MM-yyyy")</td>
                <td>
                    <form method="post" asp-controller="LOC_State" asp-action="Delete">
                        <input type="hidden" name="StateID" value="@Convert.ToInt32(dr["StateID"])">
                        <button type="submit" class="btn btn-danger" onclick="return fun1()"><i class="fa fa-close"></i></button>
                        <a class="btn btn-info btn-xs" asp-controller="LOC_State" asp-action="Add" asp-route-StateID="@Convert.ToInt32(dr["StateID"])"><i class="fa fa-edit"></i></a>

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
            $(document).ready(function () {
                $("#sample_1").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#sample_2 tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        function fun1()
        {
            if(confirm("Are you sure you want to delete?")){
                return true;
            }
            else{
                return false;
            }
        }
    </script>
}